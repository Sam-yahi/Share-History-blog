
  <%- include("header.ejs") %>

  <section class="section">
    <div>
      <h1>Tell Us Your Story</h1>
      <h4>Spread your adventure by our blog and find enthusiast travelers like you</h4>
      <button><a href="write.ejs">Share</a></button>
    </div>
  </section>
<section class="second-body">
  <h1>Recent Posts</h1>
  <div class="cards">
    <% blogs.forEach(blog => { %>
      <div class="card">
        <div class="card-body">
          <div class="banner-img">
            <% if (blog.image) { %>
              <img src="<%= blog.image %>" alt="Blog Image">
            <% } %>
          </div>
          <span class="blog-title"><h1><%= blog.title %></h1></span>
          <span class="blog-description"><p><%= blog.content %></p></span>
          <span class="profile-name"><h2>By  <%= blog.namee %></h2></span>
          <div class="card-actions">
            <button><a href="/read/<%= blog.id %>">Read</a></button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  
</div>
</section>
</body>
</html>
